{
  "name": "@govtechsg/document-store-contract",
  "version": "3.0.0",
  "main": "index.js",
  "repository": "git@github.com:Open-Attestation/document-store-contract.git",
  "author": "GovTech",
  "license": "Apache-2.0",
  "scripts": {
    "build:js": "tsc --emitDeclarationOnly && babel src -d dist --ignore src/**/*.spec.ts,src/**/*.test.ts -x .js,.ts,.tsx --copy-files",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "eslint:fix": "eslint . --ext .js --fix",
    "eslint": "eslint . --ext .js",
    "lint:sol": "./node_modules/.bin/solhint contracts/**/*.sol",
    "lint:sol:fix": "./node_modules/.bin/prettier --write contracts/**/*.sol",
    "lint:fix": "npm run lint:sol:fix && npm run eslint:fix",
    "lint": "npm run lint:sol && npm run eslint",
    "test": "truffle test",
    "test:js": "jest --testPathPattern=src",
    "truffle": "truffle",
    "benchmark": "truffle test ./benchmark/*",
    "typechain": "truffle build && typechain --target ethers \"build/contracts/*.json\"",
    "postinstall": "npm run typechain"
  },
  "jest": {
    "globalSetup": "./jest/setup.ts",
    "globalTeardown": "./jest/teardown.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts-ethereum-package": "^2.4.0",
    "@openzeppelin/upgrades": "2.6.0",
    "dotenv": "^8.2.0",
    "ethers": "^4.0.45",
    "lodash": "^4.17.15",
    "truffle": "5.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.8.6",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/prompt": "8.2.0",
    "@ls-age/commitlint-circle": "1.0.0",
    "@types/jest": "^25.1.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commitizen": "4.0.3",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "ganache-cli": "^6.9.1",
    "git-cz": "3.2.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.36",
    "solhint": "^2.3.0",
    "solhint-plugin-prettier": "0.0.3",
    "solium": "^1.2.5",
    "typechain": "^1.0.5",
    "typechain-target-ethers": "^1.0.3",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  }
}
